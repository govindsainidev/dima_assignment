@model Lib.Services.Dtos.BooksDto

@{
    Layout = null;
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"></button>
    </div>

    <div class="modal-body">

        <h5 class="modal-title" id="modalCenterTitle">Book: @Model.Title</h5>
        <dl class="row mt-2">
            <dt class="col-sm-3">@Html.LabelFor(s=>s.Title)</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">@Html.LabelFor(s=>s.AuthorName)</dt>
            <dd class="col-sm-9">@Model.AuthorName</dd>

            <dt class="col-sm-3">@Html.LabelFor(s=>s.Genere)</dt>
            <dd class="col-sm-9">@Model.Genere</dd>

            <dt class="col-sm-3">@Html.LabelFor(s=>s.CreatedAt)</dt>
            <dd class="col-sm-9">@Model.CreatedAt.Value.ToLocalTime().ToString("dd MMM yyyy")</dd>

            <dt class="col-sm-3">@Html.LabelFor(s=>s.UpdatedAt)</dt>
            <dd class="col-sm-9">@Model.UpdatedAt.Value.ToLocalTime().ToString("dd MMM yyyy")</dd>

        </dl>

        <h5 class="modal-title" id="modalCenterTitle">Subscribers</h5>
        <dl class="row mt-2">
            <dd>
                @for (int i = 0; i < Model.TotalSubscribers; i++)
                {
                    
                        <h3 class="subscribername">
                            @Model.Subscribers[i].Firstname 
                            <small>
                                @Model.Subscribers[i].Lastname
                            </small>
                        </h3>
                        
                   
                }

            </dd>



        </dl>
    </div>

 

    <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
            Close
        </button>
    </div>

</div>

