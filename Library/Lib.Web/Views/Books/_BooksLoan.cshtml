@model IEnumerable<Lib.Services.Dtos.BooksDto>

@{
    Layout = null;
}


<div class="row">

    @if (Model?.Count() > 0)
    {
        foreach (var item in Model)
        {
            <div class="col-md-6">
                <div class="searchbook">
                    <div class="loanedbook loondbooksearch">

                        <div class="bookTitle">
                            <i class="bx bx-book-content"></i>
                            <h3>
                                @item.Title
                                <small>
                                    @item.AuthorName
                                </small>
                            </h3>
                        </div>
                        <span class="geners">
                            <label>Gener </label><b>@item.Genere</b>
                        </span>

                        <h3 class="card-header padding-none">
                            Book Subscriber ( @item.TotalSubscribers )<small>

                            </small>
                        </h3>
                        @for (int i = 0; i < item.TotalSubscribers; i++)
                        {
                            <div class="booksubscriber">
                                <i class="bx bx-user-check"></i>
                                <h3 class="subscribername">
                                    @item.Subscribers[i].Firstname
                                    <small>
                                        @item.Subscribers[i].Lastname
                                    </small>
                                </h3>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

    }
    else
    {
        <h6>No books found</h6>
    }

</div>



